<div class="container">
  <% flash.each do |message_type,message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
    <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% end %>
</div>