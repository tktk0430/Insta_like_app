<% @page_title = @user.name %>

<div class="container user-show-edit">
  <div class="row">
    <div class="col-md-4">
      <%= render 'partials/user_profile' %>
      <ul class="nav">
        <li><%= link_to 'プロフィール編集', edit_user_path(@user) %></li>
      </ul>
    </div>
    <div class="user-contents col-md-8">
      <div class="user-posts">
        <h2>投稿画像</h2>
        <p>user.posts</p>
      </div>
      <div class="user-posts">
        <h2>人気の画像</h2>
        <p>user.popular_posts</p>
      </div>
    </div>
  </div>
</div>